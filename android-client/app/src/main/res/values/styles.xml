<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/eurostyle</item>
        <item name="android:windowBackground">@color/window_background_color</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="case_name_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="case_price_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/eurostyle_extended</item>
        <item name="android:textColor">@color/case_price_color</item>
    </style>

    <style name="weapon_name_style">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/eurostyle_extended</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="skin_name_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/eurostyle_extended</item>
        <item name="android:textColor">@color/case_price_color</item>
    </style>

</resources>
