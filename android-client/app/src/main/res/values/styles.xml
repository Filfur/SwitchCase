<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/eurostyle</item>
        <item name="android:windowBackground">@color/window_background_color</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="case_name_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="case_price_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/eurostyle_extended</item>
        <item name="android:textColor">@color/case_price_color</item>
    </style>

    <style name="skin_item_weapon_name_style">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/eurostyle_extended</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="skin_item_name_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/eurostyle_extended</item>
        <item name="android:textColor">@color/case_price_color</item>
    </style>

    <style name="skin_weapon_name_style">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/eurostyle_extended</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="skin_name_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/eurostyle_extended</item>
        <item name="android:textColor">@color/case_price_color</item>
    </style>

    <style name="toolbar_title_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="toolbar_balance_style">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="button_style">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="login_edit_text_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/sky</item>
    </style>

    <style name="login_bottom_text_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
